<form {{action 'saveMusicBook' model on='submit'}}>
  <div class="container">
    <div class="jumbotron">
       {{#link-to 'list'}}
       <p class="badge badge-info">Return to Music Books list</p> 
       {{/link-to}}
      <h1 class="display-4">Edit: {{model.title}}</h1>
      <div class="container form-group row">
        <label for="example-text-input" class="col-2 col-form-label">Music Book Name</label>
        <div class="col-10">
          {{input class="form-control" type="text" value=model.title}}
        </div>
      </div>
      <div class="form-group row">
        <label for="example-search-input" class="col-2 col-form-label">Author</label>
        <div class="col-10">
          {{input class="form-control" type="text" value=model.author}}
        </div>
      </div>
      <div class="form-group row">
        <label for="example-email-input" class="col-2 col-form-label">Price</label>
        <div class="col-10">
          
          {{input class="form-control"  type="number" value=model.price}}
        </div>
      </div>
      <div class="form-group row">
        <label for="example-url-input" class="col-2 col-form-label">Image URL</label>
        <div class="col-10">
          {{input class="form-control" type="text" value=model.imgUrl}}
        </div>
      </div>
      <button type="submit" class="btn btn-success" disabled={{if model.isSaving 'true' ''}}>Update Data</button>
    <button class="btn btn-danger" {{action 'destroyMusicBook' model on='click'}}>Delete</button>
    </div>
  </div>
</form>


