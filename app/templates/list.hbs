{{!-- Add a new book --}}
<br>
<br>
<form class="jumbotron jumbotron-fluidv needs-validation" novalidate{{action 'addMusicBook' on='submit'}}>
<div class="container">
    <h1 class="display-4">Add a new Book</h1>
    <p class="lead">Type the Music Book information. Then clic Add Music Book.</p>
  </div>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label for="validationBookName">Book Name</label>
      {{input type="text" class="form-control" id="validationBookName" placeholder="Book name" value=title}}
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationAuthor">Author</label>
      {{input type="text" class="form-control" id="validationAuthor" placeholder="Author name" value=author}}
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationPrice">Price</label>
      {{input type="number" class="form-control" id="validationPrice" placeholder="Price" value=price}}
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>  
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label for="validationImgUrl">Url Image</label>
      {{input type="text" class="form-control" id="validationImgUrl" placeholder="Enter Url image" value=imgUrl}}
      <div class="invalid-feedback">
        Please provide a valid city.
      </div>
    </div>
  </div>
  <button class="btn-advise btn btn-primary" type="submit">Add Music Book</button>
</form>


{{!-- Loop for books --}}
{{#each model as |music-book|}}
<br>
    
	<li class="list-group-item list-group-item-primary">Book Name: {{music-book.title}}</li>
	<li class="list-group-item">Author: {{music-book.author}}</li>
	<li class="list-group-item">Price: {{music-book.price}}</li>
    <li class="list-group-item">Photo:  <img src="{{music-book.imgUrl}}" class="rounded mx-auto d-block" alt="{{music-book.imgUrl}}">
        <button type="button" class="text-info btn btn-light btn-lg">{{#link-to 'detail' music-book.id}}
		Edit
	    {{/link-to}}
        </button>
    </li>
    {{!-- <button {{action 'deleteMusicBook' on='click'}}>Delete Music Book</button> --}}
<br>
{{/each}}
    </ul>
</div>


